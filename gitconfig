[core]
    pager = ~/.dotfiles/bin/diff-highlight | less
    mergeoptions = --no-edit
    excludesfile = ~/.gitignore

[user]
	name = Vadim Sikora
	email = vadim.sikora@divio.ch
    signingkey = 197D04BD

[apply]
    whitespace = fix

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    # Shortcuts
    st = status
    ci = commit
    co = checkout
    br = branch
    wtf = !git-wtf

    # Pretty log
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

    # Remove deleted files
    r = !git ls-files -z --deleted | xargs -0 git rm

    # List all tags
    tags = tag -l

    # Start a new local repository and perform initial commit
    this = !git init && git add . && git commmit -m \"Initial commit.\"

    # Unstage changes from the index
    unstage = reset HEAD --

    # Deletes local branches that have been merged into master
    cleanup = "!git branch --merged master | grep -v '\\* master' | xargs -n 1 git branch -d"
	restore = !git checkout $(git rev-list -n 1 HEAD -- \"$1\")^ -- \"$1\"

[url "git@github.com:"]
    insteadOf = github:

[url "git@git.aldryn.com:"]
    insteadOf = aldryn:

[url "git@git.divio.com:"]
    insteadOf = divio:

[diff]
    # [i]ndex, [w]ork tree, [c]ommit, [o]bject instead of a/b
    mnemonicprefix = true

[diff "spaceman-diff"]
    command = ~/.dotfiles/bin/spaceman-diff

[credential]
    helper = osxkeychain

[push]
    default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
    required = true
	process = git-lfs filter-process
[commit]
    gpgsign = true
[tag]
    sort = version:refname
[github]
    user = vxsx
