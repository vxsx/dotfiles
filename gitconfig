[core]
    pager = ~/.dotfiles/bin/diff-highlight | less
    mergeoptions = --no-edit
    excludesfile = ~/.gitignore
    editor = /Applications/MacVim.app/Contents/MacOS/Vim
	attributesfile = ~/.gitattributes

[user]
	name = Vadim Sikora
	email = vadim.sikora@gmail.com
	signingkey = vadim

[apply]
    whitespace = fix

[color]
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    # Shortcuts
    st = status
    ci = commit
    co = checkout
    br = branch
    wtf = !git-wtf

    todo = "!sh -c ' \
        [ $GIT_PREFIX ] && cd $GIT_PREFIX; \
        git status --short --branch $*; \
        git --no-pager diff -U0 master | \
        grep \"^+.*TODO\" | \
        sed \"s/^+//\" | \
        git --no-pager grep -nFf - 2> /dev/null' -"

    # Pretty log
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

    # Remove deleted files
    r = !git ls-files -z --deleted | xargs -0 git rm

    # List all tags
    tags = tag -l

    # Start a new local repository and perform initial commit
    this = !git init && git add . && git commit -m \"Initial commit.\"

    # Unstage changes from the index
    unstage = reset HEAD --

    # Deletes local branches that have been merged into master
    cleanup = "!git branch --merged master | grep -v '\\* master' | xargs -n 1 git branch -d"
	restore = !git checkout $(git rev-list -n 1 HEAD -- \"$1\")^ -- \"$1\"

    diff-images = difftool -y -t Kaleidoscope 

[url "git@github.com:"]
    insteadOf = github:

[url "git@git.aldryn.com:"]
    insteadOf = aldryn:

[url "git@git.divio.com:"]
    insteadOf = divio:

[url "git@gitlab.com:"]
    insteadOf = gitlab:

[diff]
    # [i]ndex, [w]ork tree, [c]ommit, [o]bject instead of a/b
    mnemonicprefix = true

[diff "spaceman-diff"]
    command = ~/.dotfiles/bin/spaceman-diff

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[credential]
    helper = osxkeychain

[push]
    default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
    required = true
	process = git-lfs filter-process
[commit]
    gpgsign = true
[tag]
    sort = version:refname
[github]
    user = vxsx
