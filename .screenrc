#### Term
term        xterm
termcapinfo xterm ti@:te@:kl@:kr@:kd@:ku@:%i@:#4@

### #Ttitle
caption always " %{kw}%-w%{wk} %n %t %{-}%+w %=%H %C%a "

#### Settings
escape ^\\

msgwait 0
altscreen on
vbell off
startup_message off
defscrollback 5000
autodetach on

bindkey ^[[D prev #control + left arrow
bindkey ^[[C next #control + right arrow

screen -t cs4 env WORKSPACE=cs4 bash
screen -t cs4adm env WORKSPACE=cs4adm bash
screen -t cs4shell env WORKSPACE=cs4shell bash
screen -t cs4admshell env WORKSPACE=cs4admshell bash
screen -t cs3shell env WORKSPACE=cs3shell bash
